{
  "manifest_version": 3,
  "name": "Promptly - AI Prompt Manager",
  "version": "1.0.0",
  "description": "Save, enhance, and manage your AI prompts efficiently",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
   
    "https://promptly-tuhj.onrender.com/*",
    "http://localhost:5000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://promptly-tuhj.onrender.com/ http://localhost:5000/ "
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}